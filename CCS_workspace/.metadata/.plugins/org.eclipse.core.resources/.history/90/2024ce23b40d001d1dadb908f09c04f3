#include <msp430.h>
#include <msp430g2553.h>
#include "config.h"
uchar count = 0;
/**
 * P1.0-P1.3
 * P1.4-P1.7    四路红外
 * P2.0         ENA
 * P2.1         IN1
 * P2.2         IN2
 * P2.5         ENB
 * P2.4         IN3
 * P2.3         IN4
 *
 */

void Init_PWM(void)
{
//   P2SEL |= BIT0;  //TA1从P2.0输出
//   P2DIR |= BIT0;  //TA1从P2.0输出
//   P2SEL |= BIT5;  //TA2从P2.5输出
//   P2DIR |= BIT5; //TA2从P2.5输出
//   P2DIR |= BIT2; //TA2从P2.5输出
//   P2DIR |= BIT4; //TA2从P2.5输出

    P2DIR = 0Xff;

   P1SEL = 0x00;     //   I/O口
   P1DIR = 0x0f;    //设置P1.0-P1.3为输出模式，P1.4-P1.7为输入，读取来自红外避障模块的信息  (I:0,O:1)
   TACTL |= MC_1 + TASSEL_1;  //时钟源选择ACLK，增计数模式 TA设置
   TACCTL1 = OUTMOD_7; //模式7 高电平PWM输出 PWM设置
   TACCTL2 = OUTMOD_7; //模式7 高电平PWM输出
   TACCR0 = 33-1;  //PWM总周期=32个ACLK周期 约等于1000Hz 设置PWM的周期
   //TACCR1 = 16;    //TA1 占空比= 16/32=50% 设置占空比
   //TACCR2 = 16;    //TA2 占空比= 16/32=50%
}
void Set_PWM1_Duty(uchar duty)    //设置PWM占空比
{
     TACCR1 = duty;
}
void Set_PWM2_Duty(uchar duty)
{
     TACCR2 = duty;
}

/**
 * 开车
 * p2.0-p2.5
 * */
void stop()
{
    P2OUT=0X0f;
}
void zhizou(char D)
{
    if(D==1)
    {
     P2OUT = 0X14;//0001 0100
     Set_PWM1_Duty(12);
     Set_PWM2_Duty(12);
    }
    if(D==2)
    {
        P2OUT = 0x18;//0001 1000
        Set_PWM1_Duty(10);
        Set_PWM2_Duty(10);
    }
}
void left(char L)
{
    P2OUT = 0x14;
    if(L==1)
    {
        Set_PWM1_Duty(24);    //左转采用左轮倒转右论正转的方式，这种转弯方式比较快，右转同理
        Set_PWM2_Duty(32);
    }
    if(L==2)
    {
        Set_PWM1_Duty(50);
        Set_PWM2_Duty(50);
    }
}
void right(char R)
{
    P2OUT = 0x06;
    if(R==1)
    {
        Set_PWM1_Duty(32);
        Set_PWM2_Duty(24);
    }
    if(R==2)
    {
        Set_PWM1_Duty(50);
        Set_PWM2_Duty(50);
    }
}

/**
 * 主函数
 */
void main()
{
  WDTCTL = WDTPW | WDTHOLD ;   //关闭开门狗
//  Clock_Init();
  //UART_Init();
  Init_PWM();
  P1SEL = 0x00;
  P1DIR = 0x0f;    //设置为输出模式用来控制电机
  //Set_PWM1_Duty(16);
  //Set_PWM2_Duty(16);
  while(1)
  {
      P2OUT=0X14;
      P2OUT |= (BIT3+BIT4);
      //zhizou(1);
//      switch(P1IN&0xf0)
//        {
//            case 0xf0:zhizou(1);break;
//            //case 0x1c:left(2);break;
//             case 0x00:left(1);break;
//              //case 0x07:right(2);break;
//              case 0xb0:right(1);break;
//              default:zhizou(1); break;
//         }
  }
}
